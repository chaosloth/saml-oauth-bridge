{
  "name": "saml-oauth-bridge",
  "author": "Christopher Connolly",
  "version": "1.0.0",
  "description": "SAML to OAUTH bridge implemented as IDP",
  "private": true,
  "license": "Private",
  "scripts": {
    "test": "tsc --noEmit",
    "start": "twilio-run --functions-folder dist/functions --assets-folder dist/assets",
    "deploy": "twilio-run deploy --functions-folder dist/functions --assets-folder dist/assets",
    "build": "tsc && npm run build:copy-assets",
    "build:copy-assets": "copyfiles src/assets/* src/assets/**/* --up 2 --exclude **/*.ts dist/assets/",
    "prestart": "npm run build",
    "predeploy": "npm run build",
    "next-build": "next build && next export -o assets/",
    "next-start": "next start",
    "dev": "next dev"
  },
  "dependencies": {
    "@twilio-labs/serverless-runtime-types": "^1.1",
    "@twilio-paste/core": "^15.1.0",
    "@twilio-paste/icons": "^9.0.0",
    "@twilio/runtime-handler": "1.2.3",
    "@types/express-serve-static-core": "^4.17.31",
    "body-parser": "^1.20.0",
    "prop-types": "^15.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "3.4.3",
    "samlify": "^2.8.5",
    "twilio": "^3.56",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@types/uuid": "^8.3.4",
    "copyfiles": "^2.2.0",
    "twilio-run": "^3.4.2",
    "typescript": "^4.7.2"
  },
  "engines": {
    "node": "14"
  },
  "resolutions": {
    "@types/react": "^17.0.31",
    "@types/express-serve-static-core": "4.17.20",
    "@types/express": "4.17.2"
  },
  "eslintConfig": {
    "extends": "react-app"
  }
}
